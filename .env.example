# Sample environment configuration

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=test1
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@db:5432/test1
POSTGRES_HOST_PORT=5433

# Bind service names
DB_HOST=db

# FastAPI
# Backend port
BACKEND_PORT=8000

# Optional HTTPS/TLS configuration for the backend container
# When both variables are set the uvicorn server will terminate TLS itself.
BACKEND_SSL_CERTFILE=
BACKEND_SSL_KEYFILE=
# Optional password for encrypted keyfiles
BACKEND_SSL_KEYFILE_PASSWORD=
# Optional CA bundle (useful with private certificate authorities)
BACKEND_SSL_CA_FILE=
# Override the healthcheck URL when HTTPS is enabled (e.g. https://backend.local/health)
BACKEND_HEALTHCHECK_URL=

# JSON array with the front-end origins that are allowed to talk to the API
BACKEND_CORS_ORIGINS=["https://client-mt.netlify.app"]
ALLOWED_ORIGINS=["https://client-mt.netlify.app"]
# Legacy comma-separated list kept for local development overrides
CORS_ORIGINS=http://localhost:3000

# Front-end (optional)
FRONTEND_PORT=3000
APP_PUBLIC_URL=http://localhost:3000

# Admin credentials for /auth/login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
# Token returned on successful login
ADMIN_TOKEN=adminsecret

# Secret key used to sign tokens
JWT_SECRET=changeme
TICKET_LINK_SECRET=changeme-ticket-link
TICKET_LINK_TTL_DAYS=3

# SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=example
SMTP_PASSWORD=changeme
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Bus Tickets
