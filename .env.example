# Sample environment configuration

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=test1
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@db:5432/test1
POSTGRES_HOST_PORT=5433

# Bind service names
DB_HOST=db

# FastAPI
# Backend port
BACKEND_PORT=8000

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000

# Front-end (optional)
FRONTEND_PORT=3000
CLIENT_FRONTEND_ORIGIN=http://localhost:3000
ADMIN_FRONTEND_ORIGIN=http://localhost:3001

# LiqPay
LIQPAY_PUBLIC_KEY=sandbox
LIQPAY_PRIVATE_KEY=sandbox
LIQPAY_CURRENCY=UAH

# Admin credentials for /auth/login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
# Token returned on successful login
ADMIN_TOKEN=adminsecret

# Secret key used to sign tokens
JWT_SECRET=changeme
TICKET_LINK_SECRET=changeme-ticket-link
TICKET_LINK_TTL_DAYS=3

# SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=example
SMTP_PASSWORD=changeme
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Bus Tickets
